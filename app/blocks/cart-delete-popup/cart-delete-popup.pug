mixin cart-delete-popup()
  +b.cart-delete-popup&attributes(attributes)
    +popup-content
      e.__text Вы действительно хотите удалить этот товар из корзины?
      +e.__buttons
        +button('button')(href='#').__button.js-remove-item Удалить
        +button('button')(href='#').__button.button_greyblue.js-popup-close Отмена
