mixin total()
  +b.total&attributes(attributes).sticky-block.js-total.js-sticky-block
    +e.UL.items
      +e.LI.item
        +e.SPAN.text Сумма:
        +e.B.price #[SPAN.js-total-sum 21 790] руб.
      +e.LI.item
        +e.SPAN.text Скидка:
        +e.B.price #[SPAN.js-total-discount -300] руб.
      +e.LI.item
        +e.SPAN.text Итого:
        +e.B.price #[SPAN.js-total-amount 21 790] руб.

    +button(href="order-confirmed.html")._size_big._block.__button Оформить заказ

    +e.P.promo
      +link.__link.js-total-promolink Есть промокод/карта клиента?
      +tooltip-icon.tooltip-icon_blue(data-tooltipster='{ "side": "bottom" }' title="<p>Текст подсказки</p>")
      
    +e.promoblock.js-total-promoblock
      +inputbox.total__promobox
        +input(placeholder="Промокод" name="").__promoinput
        +button.BUTTON(type="button")._size_sm.__promobutton Применить

      +inputbox.total__promobox
        +input(placeholder="Карта покупателя" name="").__promoinput
        +button.BUTTON(type="button")._size_sm.__promobutton Применить

