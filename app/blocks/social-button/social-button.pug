mixin social-buttons()
  +b.social-buttons&attributes(attributes)
    block

mixin social-button(kind)
  - var icons = { fb: 'Facebook icon', vk: 'Vk icon', instagram: 'Instagram icon' }
  +b.A.social-button(href='javascript:void(0);')&attributes(attributes)(class=`_${kind}`)
    +icon(icons[kind]).icon
