mixin product-main-slider(images, alt, hasButtons)
  +b.product-main-slider&attributes(attributes).swiper-container.js-product-main-slider
    .swiper-wrapper
      each image in images
        .swiper-slide.product-main-slider__slide
          img(src=src=`content-img/product-cards/${image}.jpg` alt=alt || '@@')

    if hasButtons
      +e.buttons
        +e.button._prev
        +e.button._next
