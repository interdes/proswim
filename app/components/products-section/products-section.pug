mixin products-section(items)
  +section._grey.products-section
    .container
        .products-section__slider.swiper-container.js-products-section-slider
          +section-head('Новинки')
            .products-section__buttons
              +circle-button('Arrow').products-section__button.products-section__button_prev
              +circle-button('Arrow').products-section__button.products-section__button_next
          +section-content.swiper-wrapper
            each item in items
              .products-section__slide.swiper-slide
                +product-card(item)
