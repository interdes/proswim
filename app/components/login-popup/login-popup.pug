mixin login-popup(isPage)
  +popup(class=isPage ? '_page' : '' id=!isPage ? 'login-popup' : '').login-popup
    +popup-header('Войти в аккаунт')
    +popup-content
      +e.FORM.form.__grid(method='post' action='/' data-parsley-validate data-parsley-trigger="focusout")
        +col(12)
          +input-label('Email адрес')(type='email' required)._size_md
        +col(12)
          +input-label('Пароль')(type='password' required)._size_md
        +col(12)
          +link(href='#password-recovery-popup')._dark.js-fancybox Забыли пароль?
        +col(12)
          +button.BUTTON(type='submit')._size_big._block Войти

    +popup-footer('Войти через соцсети')
      +social-buttons._big
        +social-button('vk')._big._colorized
        +social-button('fb')._big._colorized
        +social-button('ok')._big._colorized
        +social-button('tw')._big._colorized
      +e.text Нет аккаунта? #[+link(href="registration.html" data-popup='#registration-popup').js-fancybox Зарегистрируйтесь!]
