mixin categories-section(data, col, searchbar, centerImage)
  +b.categories-section&attributes(attributes)
    if searchbar
      +searchbar('Введите название товара или бренда для поиска...')._big

    +grid
      each item in data
        +col(col || 4)
          +category-card(item.image, item.title, item.href)(class=centerImage ? '_center_image' : '')
