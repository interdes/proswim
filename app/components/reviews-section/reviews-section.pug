mixin reviews-section(items)
  +section.reviews-section
    .container
      +section-head('Отзывы о товарах').reviews-section__head
      +section-content
        +grid.reviews-section__grid
          each item in items
            +col(6).reviews-section__col
              +review-card(item)
      +section-button

mixin reviews-section-full(items, hasBtn)
  +section.reviews-section.reviews-section_full
    +section-content
      +grid
        +col(12)
          +review-item
    if hasBtn
      +section-button Читать все отзывы
