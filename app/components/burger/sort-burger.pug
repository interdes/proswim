mixin sort-burger()
  +b.burger._filter.js-filter-burger#sort-burger&attributes(attributes)
    +e.overlay.js-filter-burger-close
    +e.content
      +e.HEADER.section.__header
        .container
          +e.headerlinks
            +link-icon('sorting_icon_mobile')._dark.__headerlink.is-active Сортировать

          +e.BUTTON.close.js-filter-burger-close
            +icon('close-menu')

      +e.innercontent
        +e.UL.list
          +e.LI.item(v-for="sortItem in sort")
            +b.A.link._dark.__link._big(
              href="#",
              @click.prevent="selectSortItem(sortItem)",
              v-bind:class="{ 'is-active': sortItem.selected }",
            )
              svg(v-if="sortItem.icon" class="link__icon")
                use(v-bind="{'xlink:href': 'assets/images/icon.svg#icon_'+sortItem.icon}")
              +e.SPAN.text {{sortItem.title}}
