mixin sort-ui(heading, count, countDescription, showDescriptionOnMobile)
  +b.sort-ui&attributes(attributes)
    +e.col._flexible
      +e.H1.heading=heading
      +e.SPAN.count
        | #{count}
        if countDescription
          +e.SPAN.countdescription(class=!showDescriptionOnMobile ? 'hide-sm' : '')=countDescription

    if block
      +e.filters
        block

mixin sort-ui-col
  +e.col&attributes(attributes)
    block
