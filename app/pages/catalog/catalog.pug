extends ../../layouts/default

block head
  - var pageTitle = 'Proswim - Очки для плавания'

block content
  +b.page#catalog
    .container
      +e.head
        +e.headcol._flexible
          +breadcrumbs(['Главная', 'Очки', 'Очки для плавания'])

      +grid.page__grid
        +col(3).page__sidebar
          +sidebar
            - var categoriesAcccordionData = getData('catalog-categories-menu')
            - var reviewsData = getData('catalog-sidebar-reviews')

            +sidebar-item
              each categoriesAccordion, index in categoriesAcccordionData
                +vertical-menu(categoriesAccordion.title, categoriesAccordion.links, true)._accordion(class=index === 0 ? 'is-active' : '')

            +sidebar-item
              +card-widget('Случайный отзыв:', 'Все отзывы')
                +review-card(reviewsData[0])._simple

            +sidebar-item
              +card-widget('Отзыв о магазине:', 'Все отзывы')
                +review-card(reviewsData[1])._simple

        +col({ xl: 9, lg: 12 }).page__content
          +sort-ui('Очки для плавания', '174', 'товара')
            +sort-ui-col
              +sort-dropdown._sort
                +sort-dropdown-button {{selectedSortItem.title}}
                +sort-dropdown-body
                  +sort-dropdown-list
                    +sort-dropdown-item(v-for="sortItem in sortList")
                      +sort-dropdown-link(
                          href="#",
                          @click.prevent="selectSortItem(sortItem)"
                        )
                        span {{sortItem.title}}
                        svg(v-if="sortItem.icon" class="sort-dropdown__icon")
                          use(v-bind="{'xlink:href': 'assets/images/icon.svg#icon_'+sortItem.icon}")

          +filter-section._simple
            +filter-section-grid._flexible
              +filter-section-col
                +filter-section-heading Ваш выбор:
              +filter-section-col
                +choice Очки-маски
              +filter-section-col
                +choice Мужские
              +filter-section-col
                +choice Arena
              +filter-section-col
                +choice 1699 - 2000 руб.
            +filter-section-grid
              +filter-section-col._not_shrinkable
                +button.BUTTON._size_sm._transparent
                  +icon('cancel copy').icon._cancel
                  | Сбросить все

          +filter-buttons(true, true)

          +filter-section
            +filter-section-grid
              +filter-section-col
                +filter-section-heading Фильтры:
              +filter-section-col
                +sort-dropdown._products
                  +sort-dropdown-button Любой товар
                  +sort-dropdown-body
                    +sort-dropdown-list
                      +sort-dropdown-item(v-for="product in productList")
                        +checkboxsep
                          +checkboxsepinput(
                            type='checkbox',
                            :name='product.name',
                            :value='product.value',
                            v-model='product.checked',
                          )
                          +checkboxsepcontent {{product.title}}
                    +sort-dropdown-submit

              +filter-section-col
                +sort-dropdown
                  +sort-dropdown-button Любой пол
                  +sort-dropdown-body
                    +sort-dropdown-list
                      +sort-dropdown-item(v-for="sexItem in sex")
                        +checkboxsep
                          +checkboxsepinput(
                            type='checkbox',
                            :name='sexItem.name',
                            :value='sexItem.value',
                            v-model='sexItem.checked',
                          )
                          +checkboxsepcontent {{sexItem.title}}
                    +sort-dropdown-submit

              +filter-section-col
                +sort-dropdown._brands
                  +sort-dropdown-button Любой бренд
                  +sort-dropdown-body
                    +searchbarsplit._small
                      +searchbarsplit-input(
                        placeholder='Поиск бренда...',
                        name='filter-brands-search',
                        v-model="brandSearch"
                      )
                    +sort-dropdown-list
                      +sort-dropdown-item(v-for="brand in brandsFilter")
                        +checkboxsep
                          +checkboxsepinput(
                            type='checkbox',
                            :name='brand.name',
                            :value='brand.value',
                            v-model='brand.checked',
                          )
                          +checkboxsepcontent {{brand.title}}
                    +sort-dropdown-submit

              +filter-section-col
                +sort-dropdown._price
                  +sort-dropdown-button Любая цена
                  +sort-dropdown-body
                    +inputbox.sort-dropdown__range
                      +range(true).js-catalog-price-slider

                    +inputbox.sort-dropdown__inputs
                      +input(
                        data-handler="0",
                        type="number",
                        v-model.number="price.minValue",
                        :min="price.min",
                        :max="price.max",
                        @input="handlePriceChange",
                      )
                      +input(
                        data-handler="1",
                        type="number",
                        v-model.number="price.maxValue",
                        :min="price.min",
                        :max="price.max",
                        @input="handlePriceChange",
                      )

                    +sort-dropdown-submit

          +catalog-section(getData('catalog-cards'))

          +section-footer

          +catalog-seo-section

  +filter-burger
  +sort-burger

block popups
  +login-popup
  +registration-popup
  +password-recovery-popup
  +registration-complete-popup
