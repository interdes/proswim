extends ../../layouts/default

block head
  - var pageTitle = 'Proswim - Очки для плавания'

block content
  +b.page
    .container
      +e.head
        +e.headcol._flexible
          +breadcrumbs(['Главная', 'Очки', 'Очки для плавания'])

      +grid.page__grid
        +col(3).page__sidebar
          +sidebar
            - var categoriesAcccordionData = getData('catalog-categories-menu')
            - var reviewsData = getData('catalog-sidebar-reviews')

            +sidebar-item
              each categoriesAccordion, index in categoriesAcccordionData
                +vertical-menu(categoriesAccordion.title, categoriesAccordion.links, true)._accordion(class=index === 0 ? 'is-active' : '')

            +sidebar-item
              +card-widget('Случайный отзыв:', 'Все отзывы')
                +review-card(reviewsData[0])._simple

            +sidebar-item
              +card-widget('Отзыв о магазине:', 'Все отзывы')
                +review-card(reviewsData[1])._simple

        +col({ xl: 9, lg: 12 }).page__content
          +sort-ui('Очки для плавания', '174', 'товара')
            +sort-ui-col
              +sort-dropdown
                +sort-dropdown-button По популярности
                +sort-dropdown-body

          +filter-section._simple
            +filter-section-grid._flexible
              +filter-section-col
                +filter-section-heading Ваш выбор:
              +filter-section-col
                +choice Очки-маски
              +filter-section-col
                +choice Мужские
              +filter-section-col
                +choice Arena
              +filter-section-col
                +choice 1699 - 2000 руб.
            +filter-section-grid
              +filter-section-col._not_shrinkable
                +button.BUTTON._size_sm._transparent
                  +icon('cancel copy').icon._cancel
                  | Сбросить все

          +filter-buttons(true, true)

          +filter-section
            +filter-section-grid
              +filter-section-col
                +filter-section-heading Фильтры:
              +filter-section-col
                +sort-dropdown
                  +sort-dropdown-button Любой товар
                  +sort-dropdown-body
                    +sort-dropdown-list
                      +sort-dropdown-item
                        +checkbox('product', 'product-1') Очки для тренировок
                      +sort-dropdown-item
                        +checkbox('product', 'product-2') Профессиональные очки для плавания
                      +sort-dropdown-item
                        +checkbox('product', 'product-3') Очки-маски
                      +sort-dropdown-item
                        +checkbox('product', 'product-4') Очки с диоприями
                      +sort-dropdown-item
                        +checkbox('product', 'product-5') Наборы “Очки+Шапочка”
                    +sort-dropdown-submit

              +filter-section-col
                +sort-dropdown
                  +sort-dropdown-button Любой пол
                  +sort-dropdown-body


              +filter-section-col
                +sort-dropdown
                  +sort-dropdown-button Любой бренд
                  +sort-dropdown-body
                    +searchbar._small
                    +sort-dropdown-list
                      +sort-dropdown-item
                        +checkbox('brand', 'product-1') Adidas
                      +sort-dropdown-item
                        +checkbox('brand', 'product-2') Adl
                      +sort-dropdown-item
                        +checkbox('brand', 'product-3') Banana Republic
                      +sort-dropdown-item
                        +checkbox('brand', 'product-4') Baon
                      +sort-dropdown-item
                        +checkbox('brand', 'product-5') Befree
                      +sort-dropdown-item
                        +checkbox('brand', 'product-6') Betsy
                      +sort-dropdown-item
                        +checkbox('brand', 'product-7') Caprice
                      +sort-dropdown-item
                        +checkbox('brand', 'product-8') United Colors Of Benneton
                      +sort-dropdown-item
                        +checkbox('brand', 'product-9') Adidas
                      +sort-dropdown-item
                        +checkbox('brand', 'product-10') Adl
                      +sort-dropdown-item
                        +checkbox('brand', 'product-11') Banana Republic
                      +sort-dropdown-item
                        +checkbox('brand', 'product-12') Baon
                      +sort-dropdown-item
                        +checkbox('brand', 'product-13') Befree
                      +sort-dropdown-item
                        +checkbox('brand', 'product-14') Betsy
                      +sort-dropdown-item
                        +checkbox('brand', 'product-15') Caprice
                      +sort-dropdown-item
                        +checkbox('brand', 'product-16') United Colors Of Benneton
                    +sort-dropdown-submit

              +filter-section-col
                +sort-dropdown
                  +sort-dropdown-button Любая цена
                  +sort-dropdown-body

          +catalog-section(getData('catalog-cards'))

          +section-footer

          +catalog-seo-section

