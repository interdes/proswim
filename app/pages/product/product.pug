extends ../../layouts/default

block head
  - var pageTitle = 'Proswim - Очки для плавания Cobra Mirror'

block content
  +b.page
    .container
      +e.head
        +e.headcol._flexible
          +breadcrumbs(['Главная', 'Очки', 'Профессиональные очки для плавания', 'Очки для плавания Arena Cobra Mirror'])
        +e.headcol
          +link-icon('Print icon')._dark._print.js-print Распечатать

      +e.head._subhead
        +e.headcol._flexible
          +e.H1.heading Очки для плавания Cobra Mirror

    +product-item-section
    +products-section(getData('small-product-cards'), 'С этим товаром покупают', true)._small
    +big-review-section
    +products-section(getData('small-product-cards'), 'Вы смотрели', true)._small

block popups
  +login-popup
  +registration-popup
  +password-recovery-popup
  +registration-complete-popup
